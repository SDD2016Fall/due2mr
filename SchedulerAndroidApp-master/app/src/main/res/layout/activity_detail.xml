<ScrollView
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.zobtech.scheduler.DetailActivity.DetailFragment"
        android:orientation="vertical" >

        <com.zobtech.scheduler.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule Title"
            android:id="@+id/detailTextViewSchedule"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@color/PrimaryDark"/>

        <com.zobtech.scheduler.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Set:"
            android:id="@+id/dateSet"
            android:layout_below="@+id/detailTextViewSchedule"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp"
            android:textSize="22sp"/>

        <com.zobtech.scheduler.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Set:"
            android:id="@+id/timeSet"
            android:layout_below="@+id/dateSet"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp"
            android:textSize="22sp"/>

        <com.zobtech.scheduler.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nov 4, 2015"
            android:id="@+id/detailTextViewDate"
            android:layout_below="@+id/detailTextViewSchedule"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:textSize="22sp"/>

        <com.zobtech.scheduler.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00 AM"
            android:id="@+id/detailTextViewTime"
            android:layout_below="@+id/detailTextViewDate"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:textSize="22sp"/>

        <com.zobtech.scheduler.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/description"
            android:text="Description:"
            android:textSize="22sp"
            android:layout_below="@+id/timeSet"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp"/>

        <com.zobtech.scheduler.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Description"
            android:id="@+id/detailTextViewDescription"
            android:gravity="top"
            android:background="@color/Primary"
            android:layout_below="@+id/description"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />

    </RelativeLayout>

</ScrollView>